    <class>com.x3.musrenbang.entity.Menu</class>
    <class>com.x3.musrenbang.entity.Roles</class>
    <class>com.x3.musrenbang.entity.Users</class>
    <class>com.x3.musrenbang.entity.UsulanBappeda</class>
